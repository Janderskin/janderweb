{% style %}
    .section-{{ section.id }}-padding{
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
    }
{% endstyle %}
<div class="custom-heading-section color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
  {% if section.settings.heading != blank %}
    <{{ section.settings.heading_tag }} 
       class="{{ section.settings.heading_classes }}" 
       style="text-align: {{ section.settings.heading_align }}; width:100%; max-width: {{ section.settings.heading_max_width }}px; margin: 0 auto;">
      {{ section.settings.heading }}
    </{{ section.settings.heading_tag }}>
  {% endif %}

  <div class="custom-blocks-wrapper">
    {% for block in section.blocks %}
      <div class="custom-block flex" {{ block.shopify_attributes }}>
        <!-- Left: Image -->
        {% if block.settings.image != blank %}
          <div class="custom-block-image aspect-ratio" style="--image-ratio: {{ block.settings.image_padding_top }}%;">
             <img 
              src="{{ block.settings.image | image_url: width: 800 }}" 
              alt="{{ block.settings.image.alt | escape }}" 
              style="object-fit: cover; object-position: center {{ block.settings.image_position }};"
              loading="lazy">
          </div>
        {% endif %}

        <!-- Right: Content -->
        <div class="custom-block-content">
          {% if block.settings.title != blank %}
            <h3 class="custom-block-title">{{ block.settings.title }}</h3>
          {% endif %}

          {% if block.settings.text != blank %}
            <div class="custom-block-text">{{ block.settings.text }}</div>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Image Blocks Section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Section Heading",
      "default": "This is my section heading"
    },
    {
      "type": "select",
      "id": "heading_tag",
      "label": "Heading Tag",
      "default": "h2",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" },
        { "value": "h4", "label": "H4" }
      ]
    },
    {
      "type": "select",
      "id": "heading_align",
      "label": "Heading Alignment",
      "default": "center",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "text",
      "id": "heading_classes",
      "label": "Extra Classes for Heading",
      "default": "custom-heading"
    },
    {
      "type": "range",
      "id": "heading_max_width",
      "label": "Heading Max Width (px)",
      "min": 400,
      "max": 1600,
      "step": 50,
      "default": 800
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Section Padding Top (px)",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Section Padding Bottom (px)",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 50
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "t:sections.video.settings.full_width.label",
      "default": false
    },
  ],
  "blocks": [
    {
      "type": "block",
      "name": "Image + Content Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Block Image"
        },
        {
  "type": "select",
  "id": "image_position",
  "label": "Image Position",
  "default": "center",
  "options": [
    { "value": "top", "label": "Top" },
    { "value": "center", "label": "Center" },
    { "value": "bottom", "label": "Bottom" }
  ]
},
        {
          "type": "range",
          "id": "image_padding_top",
          "label": "Image Aspect Ratio (%)",
          "min": 50,
          "max": 150,
          "step": 5,
          "default": 100
        },
        {
          "type": "text",
          "id": "title",
          "label": "Block Title",
          "default": "Block Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Block Content",
          "default": "<p>Write your content here</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Blocks"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.custom-blocks-wrapper {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.custom-block {
  display: flex;
  align-items: flex-start;
  gap: 2rem;
}

.custom-block-image {
  flex: 1;
  position: relative;
  width: 100%;
}

.custom-block-image::before {
  content: "";
  display: block;
  padding-top: var(--image-ratio, 100%);
}

.custom-block-image img {
  position: absolute;
  top: 0; left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.custom-block-content {
  flex: 1;
}

.custom-block-title {
  margin-bottom: 0.5rem;
  font-weight: bold;
}
@media (max-width: 500px){
    .custom-block-content .custom-block-title{
        font-size: 12px;
        margin: 0;
    }
    .custom-block-content .custom-block-text{
        font-size: 10px;
    }
}
{% endstylesheet %}
