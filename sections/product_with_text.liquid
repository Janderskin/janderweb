{% schema %}
{
  "name": "Two Side Product Section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "default": 40,
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "default": 40,
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px"
    },
    {
      "type": "product",
      "id": "product",
      "label": "Select product"
    },
    {
      "type": "text",
      "id": "right_heading",
      "label": "Right side heading",
      "default": "Your Heading Here"
    },
    {
      "type": "textarea",
      "id": "right_text",
      "label": "Right side text",
      "default": "Add your description text here."
    },
    {
      "type": "textarea",
      "id": "right_keypoints",
      "label": "Key points (one per line)",
      "default": "Point one\nPoint two\nPoint three"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "label": "Image ratio",
      "options": [
        { "value": "adapt", "label": "Adapt" },
        { "value": "square", "label": "Square" },
        { "value": "portrait", "label": "Portrait" }
      ],
      "default": "adapt"
    },
    {
      "type": "select",
      "id": "image_shape",
      "label": "Image shape",
      "options": [
        { "value": "default", "label": "Default" },
        { "value": "circle", "label": "Circle" }
      ],
      "default": "default"
    },
    {
      "type": "checkbox",
      "id": "show_secondary_image",
      "label": "Show secondary image",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "label": "Show rating",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "quick_add",
      "label": "Enable Quick add",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width section",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Two Side Product Section"
    }
  ]
}
{% endschema %}

<div class="two-side-section color-{{ section.settings.color_scheme }} {% unless section.settings.full_width %} page-width{% endunless %}"
     style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="grid grid--2-col">
    <div class="left-side">
      {% if section.settings.product != blank %}
        {% assign product = all_products[section.settings.product] %}
        {% render 'card-product',
          card_product: product,
          media_aspect_ratio: section.settings.image_ratio,
          image_shape: section.settings.image_shape,
          show_secondary_image: section.settings.show_secondary_image,
          show_vendor: section.settings.show_vendor,
          show_rating: section.settings.show_rating,
          skip_styles: skip_card_product_styles,
          section_id: section.id,
          quick_add: section.settings.quick_add
        %}
      {% else %}
        <p>Please select a product from the section settings.</p>
      {% endif %}
    </div>
    <div class="right-side">
      {% if section.settings.right_heading != blank %}
        <h2>{{ section.settings.right_heading }}</h2>
      {% endif %}

      {% if section.settings.right_text != blank %}
        <p>{{ section.settings.right_text }}</p>
      {% endif %}

      {% if section.settings.right_keypoints != blank %}
        <ul>
          {% assign points = section.settings.right_keypoints | split: '/' %}
          {% for point in points %}
            <li>{{ point }}</li>
          {% endfor %}
        </ul>
      {% endif %}

      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" class="button">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>

  </div>
</div>
{% style %}
  .two-side-section .left-side{
    fleX: 0 0 calc(48% - 10px);
  }
.two-side-section .right-side{
    fleX: 0 0 calc(50% - 10px);
  }
  .right-side ul{
    list-style: none;
    padding: 0;
  }
{% endstyle %}